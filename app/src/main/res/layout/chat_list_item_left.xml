<?xml version="1.0" encoding="utf-8"?>
<com.lightmsg.activity.msgdesign.chat.ChatMsgLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_list_left_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="false"
    android:background="@null"
    android:padding="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:focusable="false">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ChatDate"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >
        <ImageView
            android:id="@+id/portrait"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:focusable="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/portrait_thumbnail_img_04"/>
        <TextView
            android:id="@+id/msg"
            android:layout_toRightOf="@id/portrait"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginLeft="@dimen/chat_msg_margin_with_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:maxWidth="@dimen/chat_msg_textview_max_width"
            android:gravity="center_vertical"
            android:focusable="true"
            style="@style/ChatMsg"
            android:background="@drawable/messages_bubble_receivedmessage"/>
        <!-- android:background="@drawable/chatfrom_bg_normal"
        android:layout_below="@+id/name" -->
        <ImageView
            android:id="@+id/msg_img"
            android:layout_toRightOf="@id/portrait"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginLeft="@dimen/chat_msg_margin_with_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:maxWidth="@dimen/chat_msg_imageview_max_width"
            android:gravity="center_vertical"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:focusable="true"
            style="@style/ChatMsg"
            android:background="@drawable/messages_bubble_receivedmessage"/>
        <!-- android:background="@drawable/chatfrom_bg_normal"-->
        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@id/portrait"
            android:layout_above="@+id/msg"
            android:layout_marginLeft="@dimen/chat_name_margin_with_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:focusable="false"
            style="@style/ChatName"/>
    </RelativeLayout>
</com.lightmsg.activity.msgdesign.chat.ChatMsgLinearLayout>
